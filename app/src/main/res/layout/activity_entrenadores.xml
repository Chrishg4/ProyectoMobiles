<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grisFondo"
    tools:context=".Activity_Entrenadores">

    <!-- Botón buscar redondo tipo Material -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBuscar2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/azulUTN"
        app:icon="@drawable/busqueda"
        app:iconTint="@color/blanco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/Shape.Rounded.Large" />

    <!-- Título Material -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="@string/title_trainers"
        android:textColor="@color/azulUTN"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Caja de texto Material -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layoutBuscar"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Buscar entrenador"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtTitulo">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edtBuscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>


    <!-- ListView dentro de Card Material -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardLista"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/blanco"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toTopOf="@id/layoutBotones"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutBuscar">

        <ListView
            android:id="@+id/listEntrenadores"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="1dp" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Botonera inferior estilo Material -->
    <LinearLayout
        android:id="@+id/layoutBotones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- AGREGAR -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAgregar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:backgroundTint="@color/azulUTN"
            android:onClick="agregar"
            android:text="@string/btn_add"
            android:textColor="@color/blanco"
            app:icon="@drawable/guardar"
            app:iconGravity="textTop"
            app:iconTint="@color/blanco" />

        <!-- EDITAR -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:backgroundTint="@color/naranjaUTN"
            android:onClick="editar"
            android:text="@string/btn_edit"
            android:textColor="@color/blanco"
            app:icon="@drawable/editar_usuarios"
            app:iconGravity="textTop"
            app:iconTint="@color/blanco" />

        <!-- ELIMINAR -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:backgroundTint="@color/rojoUTN"
            android:onClick="Eliminar"
            android:text="@string/btn_delete"
            android:textColor="@color/blanco"
            app:icon="@drawable/borrar_usuarios"
            app:iconGravity="textTop"
            app:iconTint="@color/blanco" />

        <!-- SALIR -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSalir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/azulUTN"
            android:onClick="exit"
            android:text="@string/btn_exit"
            android:textColor="@color/blanco"
            app:icon="@drawable/salida"
            app:iconGravity="textTop"
            app:iconTint="@color/blanco" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
