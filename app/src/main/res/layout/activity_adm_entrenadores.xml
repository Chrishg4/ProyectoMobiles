<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grisFondo"
    tools:context=".Activity_AdmEntrenadores">

    <ScrollView
        android:id="@+id/scrollFormulario"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Título -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:text="@string/title_manage_trainers"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/azulUTN"/>

            <!-- Avatar -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgAvatar"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/entrenador"
                app:shapeAppearanceOverlay="@style/Shape.Rounded.Large"/>

            <!-- Campo: Cédula -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="30dp"
                android:hint="@string/field_id"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtCedula"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo: Nombre -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="30dp"
                android:hint="@string/field_name"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Campo: Número -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="30dp"
                android:hint="@string/field_number"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtNumero"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botones de audio -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_play"
                    app:icon="@drawable/play"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    android:backgroundTint="@color/azulUTN"
                    android:textColor="@color/blanco"
                    android:onClick="reproducirAudio"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRecord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_record"
                    app:icon="@drawable/record"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    android:backgroundTint="@color/naranjaUTN"
                    android:textColor="@color/blanco"
                    android:onClick="irAGrabarAudio"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <!-- Campos de ubicación -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/title_locations"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/azulUTN"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="30dp"
                android:hint="@string/field_location_longitude"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/longitud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="30dp"
                android:hint="@string/field_location_latitude"
                android:layout_marginTop="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/latitud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botón agregar ubicación -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAgregarEditarUbi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_add"
                app:icon="@drawable/addlocation"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                android:backgroundTint="@color/azulUTN"
                android:textColor="@color/blanco"
                android:onClick="irAUbicacion"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="16dp"/>

            <!-- Imagen -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/image_avatar"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/azulUTN"/>

            <!-- Imagen dentro de tarjeta Material -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardImagen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_margin="12dp"
                app:strokeColor="@color/azulUTN"
                app:strokeWidth="1dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="273dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/Shape.Rounded.Medium"
                    android:contentDescription="@string/image_avatar"/>
            </com.google.android.material.card.MaterialCardView>


            <!-- Botón agregar imagen -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAgregarImagen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/image_take_photo"
                app:icon="@drawable/camara"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                android:backgroundTint="@color/azulUTN"
                android:textColor="@color/blanco"
                android:onClick="irAImagen"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="16dp"/>

            <!-- Botones finales -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAgregarEditarUbi1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/azulUTN"
                    android:onClick="funcionEYG"
                    android:text="@string/btn_add"
                    android:textColor="@color/blanco"
                    app:icon="@drawable/guardar"
                    app:iconGravity="textTop"
                    app:iconPadding="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Reiniciar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/naranjaUTN"
                    android:onClick="reiniciar"
                    android:text="@string/btn_reset"
                    android:textColor="@color/blanco"
                    app:icon="@drawable/reiniciar"
                    app:iconGravity="textTop"
                    app:iconPadding="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/rojoUTN"
                    android:onClick="cancelar"
                    android:text="@string/btn_cancel"
                    android:textColor="@color/blanco"
                    app:icon="@drawable/cancelar"
                    app:iconGravity="textTop"
                    app:iconPadding="8dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
