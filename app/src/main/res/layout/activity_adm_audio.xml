<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFF0D8"
    android:padding="24dp"
    tools:context=".Activity_AdmAudio">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- TÍTULO -->
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/header_audio"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <!-- BOTÓN: INICIAR GRABACIÓN -->
            <Button
                android:id="@+id/btnIniciarGrabacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:onClick="iniciarGrabacion"
                android:text="@string/start_recording"
                android:textColor="#000000"
                android:backgroundTint="#4CAF50"
                app:icon="@drawable/record"
                app:iconSize="20dp"
                app:iconGravity="textTop"
                app:iconTint="#000000" />

            <!-- BOTÓN: DETENER GRABACIÓN -->
            <Button
                android:id="@+id/btnDetenerGrabacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:onClick="detenerGrabacion"
                android:text="@string/stop_recording"
                android:textColor="#000000"
                android:backgroundTint="#D33232"
                app:icon="@drawable/stop"
                app:iconSize="24dp"
                app:iconGravity="textTop"
                app:iconTint="#000000" />

            <!-- BOTÓN: INICIAR REPRODUCCIÓN -->
            <Button
                android:id="@+id/btnIniciarReproduccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:onClick="iniciarReproduccion"
                android:text="@string/play_audio"
                android:textColor="#000000"
                android:backgroundTint="#009688"
                app:icon="@drawable/play"
                app:iconGravity="textTop"
                app:iconSize="20dp"
                app:iconTint="#000000" />

            <!-- BOTÓN: DETENER REPRODUCCIÓN -->
            <Button
                android:id="@+id/btnDetenerReproduccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:onClick="detenerReproduccion"
                android:text="@string/stop_playing"
                android:textColor="#000000"
                android:backgroundTint="#D33232"
                app:icon="@drawable/pause"
                app:iconGravity="textTop"
                app:iconSize="20dp"
                app:iconTint="#000000" />

            <!-- BOTÓN: GUARDAR AUDIO -->
            <Button
                android:id="@+id/btnGuardarAudio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:onClick="guardarAudio"
                android:text="@string/save_audio"
                android:textColor="#000000"
                android:backgroundTint="#4CAF50"
                app:icon="@drawable/guardar"
                app:iconGravity="textTop"
                app:iconSize="20dp"
                app:iconTint="#000000" />

            <!-- BOTÓN: SALIR -->
            <Button
                android:id="@+id/btnSalir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:onClick="salir"
                android:text="@string/btn_exit"
                android:textColor="#000000"
                android:backgroundTint="#D33232"
                app:icon="@drawable/cancelar"
                app:iconGravity="textTop"
                app:iconSize="20dp"
                app:iconTint="#000000" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
