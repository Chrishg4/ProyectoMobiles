<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grisFondo"
    android:padding="24dp"
    tools:context=".Activity_AdmAudio">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- TÍTULO -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txtTitulo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="@string/header_audio"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/azulUTN"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <!-- INICIAR GRABACIÓN -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIniciarGrabacion"
                style="@style/Widget.App.Button.Primary"
                android:layout_width="200dp"
                android:layout_height="60dp"
                app:iconSize="24dp"
                android:text="@string/start_recording"
                android:onClick="iniciarGrabacion"
                app:icon="@drawable/record" />

            <!-- DETENER GRABACIÓN -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDetenerGrabacion"
                style="@style/Widget.App.Button.Danger"
                android:layout_width="200dp"
                android:layout_height="60dp"
                app:iconSize="24dp"
                android:text="@string/stop_recording"
                android:onClick="detenerGrabacion"
                app:icon="@drawable/stop" />

            <!-- INICIAR REPRODUCCIÓN -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIniciarReproduccion"
                style="@style/Widget.App.Button.Secondary"
                android:layout_width="200dp"
                android:layout_height="60dp"
                app:iconSize="20dp"
                android:text="@string/play_audio"
                android:onClick="iniciarReproduccion"
                app:icon="@drawable/play" />

            <!-- DETENER REPRODUCCIÓN -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDetenerReproduccion"
                style="@style/Widget.App.Button.Danger"
                android:layout_width="200dp"
                android:layout_height="60dp"
                app:iconSize="20dp"
                android:text="@string/stop_playing"
                android:onClick="detenerReproduccion"
                app:icon="@drawable/pause" />

            <!-- GUARDAR AUDIO -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGuardarAudio"
                style="@style/Widget.App.Button.Primary"
                android:layout_width="200dp"
                android:layout_height="60dp"
                app:iconSize="24dp"
                android:text="@string/save_audio"
                android:onClick="guardarAudio"
                app:icon="@drawable/guardar" />

            <!-- SALIR -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSalir"
                style="@style/Widget.App.Button.Danger"
                android:layout_width="200dp"
                android:layout_height="60dp"
                app:iconSize="24dp"
                android:text="@string/btn_exit"
                android:onClick="salir"
                app:icon="@drawable/cancelar" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
