<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    tools:context=".Activity_AdmAudio">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grabadora de Audio"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btnIniciarGrabacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:onClick="iniciarGrabacion"
        android:text="Iniciar Grabaci贸n" />

    <Button
        android:id="@+id/btnDetenerGrabacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:onClick="detenerGrabacion"
        android:text="Detener Grabaci贸n" />

    <Button
        android:id="@+id/btnIniciarReproduccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:onClick="iniciarReproduccion"
        android:text="Iniciar Reproducci贸n" />

    <Button
        android:id="@+id/btnDetenerReproduccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:onClick="detenerReproduccion"
        android:text="Detener Reproducci贸n" />

    <Button
        android:id="@+id/btnGuardarAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:onClick="guardarAudio"
        android:text="Guardar Audio" />

</LinearLayout>